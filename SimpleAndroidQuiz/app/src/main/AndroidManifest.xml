<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quiz.simpleandroidquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.quiz.simpleandroidquiz.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quiz.simpleandroidquiz.StartQuizActivity"
            android:label="@string/title_activity_start_quiz" >
        </activity>
        <activity
            android:name="com.quiz.simpleandroidquiz.DisplayQuizResult"
            android:label="@string/title_activity_display_quiz_result" >
        </activity>
    </application>

</manifest>
